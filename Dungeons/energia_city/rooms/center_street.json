{
    "name": "Center Street",
    "interactions": [
        {
            "type": "engine:interactable/door",
            "id": "exit_door",
            "target": "world:rooms/start"
        },
        {
            "type": "engine:interactable/passage",
            "id": "west_passage",
            "target": "energia_city:rooms/west_main_street"
        }
    ],
    "events": {
        "on_enter": {
            "functions": [
                {
                    "function": "engine:player/message",
                    "message": "You are on Center Street.\nAvailable locations:\nWest Main Street"
                }
            ]
        },
        "on_input": {
            "function": "engine:text/match",
            "text": {
                "#ref": "#text"
            },
            "matches": [
                {
                    "pattern": "(leave|exit)",
                    "function": "engine:interaction/interact",
                    "interactable": ".exit_door"
                },
                {
                    "pattern": "west",
                    "function": "engine:interaction/interact",
                    "interactable": ".west_passage"
                }
            ]
        }
    }
}