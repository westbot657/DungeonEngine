{
    "$goto_check": {
        "#script": "world/scripts/goto_check"
    },


    "$combat:enemy_health_check": {
        "@check": {
            "function": "engine:logic/compare",
            "<=": [
                {"#ref": "#enemy.health"},
                {"#ref": "target_health"}
            ]
        },
        "true": {
            "function": "engine:combat/trigger",
            "trigger": {
                "function": "engine:text/join",
                "text": [
                    {"#ref": "#enemy.uid"},
                    "health-check",
                    {"#ref": "target_health"}
                ],
                "seperator": "-"
            }
        }
    }

}