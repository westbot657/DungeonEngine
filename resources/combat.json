{
    "on_player_turn_input": {
        "functions": [
            {
                "function": "engine:list/for_each",
                "list": {"#ref": ".enemies"},
                "run": {
                    "functions": [
                        {
                            "function": "engine:text/match",
                            "matches": [
                                {
                                    "pattern": {
                                        "function": "engine:text/replace_pattern",
                                        "text": {
                                            "function": "engine:text/set_case",
                                            "case": "lower",
                                            "text": {"#ref": "element.name"}
                                        },
                                        "pattern": " +",
                                        "replacement": " "
                                    },
                                    "functions": [
                                        {
                                            "function": "engine:text/match",
                                            "match_type": "find",
                                            "text": {
                                                "function": "engine:text/set_case",
                                                "case": "lower",
                                                "text": {"#ref": "#text"}
                                            }
                                        },
                                        {
                                            "function": "engine:control/break"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            }
        ]
    }
}