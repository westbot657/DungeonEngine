            "required": true
        },
        "shopkeeper": {
            "type": "engine:text",
            "required": false
        },
        "stock": {
            "type": "engine:loot_table",
            "required": true
        },
        "restock_time": {
            "type": "engine:text",
            "required": false,
            "default": ""
        },
        "out_of_stock_message": {
            "type": "engine:text",
            "required": false,
            "default": "Out of stock."
        },
        "enter_message": {
            "type": "engine:text",
            "required": false,
            "default": ""
        },
        "exit_message": {
            "type": "engine:text",
            "required": false,
            "default": ""
        },
        "closed": {
            "type": "engine:boolean",
            "required": false,
            "default": false
        },
        "closed_message": {
            "type": "engine:text",
            "required": false,
            "default": "{shop_name} is closed."
        }
