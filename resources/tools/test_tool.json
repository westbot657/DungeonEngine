{
    "name": "First Aid Kit",
    "max_durability": 10,
    "events": {
        "on_use": [
            {
                "function": "engine:player/heal",
                "amount": {
                    "function": "engine:random/uniform",
                    "min": 1,
                    "max": 8
                }
            }
        ],
        "on_damage": {
            "functions": [
                {
                    "function": "engine:player/message",
                    "message": {
                        "function": "engine:text/builder",
                        "text": [
                            "You used the First aid kit, you have",
                            {
                                "#ref": ".durability"
                            },
                            "left!"
                        ]
                    }
                },
                {
                    "function": "engine:player/message",
                    "message": {
                        "function": "engine:text/builder",
                        "text": [
                            "You said: '",
                            {
                                "function": "engine:player/get_input",
                                "prompt": "say something."
                            },
                            "' !!"
                        ]
                    }
                }
            ]
        },
        "on_break": {
            "function": "engine:player/message",
            "message": "uh oh! you ran out of First aid kits! :P"
        }
    }
}